{
  "name": "staabm/annotate-pull-request-from-checkstyle",
  "license" : "MIT",
  "keywords": ["dev", "continous integration", "github actions"],
  "require" : {
    "php"          : "^5.3 || ^7.0 || ^8.0",
    "ext-libxml" : "*",
    "ext-simplexml" : "*"
  },
  "require-dev" : {
    "friendsofphp/php-cs-fixer": "^2.16.1"
  },
  "authors" : [
    {
      "name" : "Markus Staab"
    }
  ],
  "bin" : ["cs2pr"],
  "scripts": {
    "cs": "php-cs-fixer fix --config=.php_cs --diff --diff-format=udiff --verbose"
  }
}
